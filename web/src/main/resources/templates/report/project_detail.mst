<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=1280" />
    <title>项目详情报告</title>
    <link rel="stylesheet" type="text/css" href="/public/lib/foundation.css">
  </head>
  <body>
    <div class="grid-container">
      <div class="grid-x margin-bottom-1">

        <div class="cell">

          <div class="top-bar">
            <div class="top-bar-left">
              <ul class="dropdown menu" data-dropdown-menu>
                <li class="menu-text">禅道PLUS</li>
                <li><a href="/" >项目概况</a></li>
                <li class="is-active"><a href="/report/project">项目明细</a></li>
              </ul>
            </div>
          </div>

        </div>
      </div>

      <div class="grid-x">
        <div class="cell">
          <nav role="navigation">
            <ul class="breadcrumbs">
              <li><a href="/report/project">项目列表</a></li>
              <li>
                <span class="show-for-sr">当前: </span> {{projectInfo.name}}
              </li>
            </ul>
          </nav>

        </div>
      </div>

      <div class="grid-x">
        <div class="cell">
          <div class="charts" id="people-charts"></div>
        </div>
      </div>

      <div class="grid-x">
        <div class="cell">
          <div class="charts" id="people-time-usage-charts"></div>
        </div>
      </div>

      <div class="grid-x">
        <div class="cell small-6 medium-6 large-6">
          <div class="charts one-line" id="task-type-pie"></div>
        </div>
        <div class="cell small-6 medium-6 large-6">
          <div class="charts one-line" id="task-type-pie-num"></div>
        </div>
      </div>

      <div class="grid-x">
        <div class="cell small-6 medium-6 large-6">
          <div class="charts one-line" id="project-time-usage-charts"></div>
        </div>
        <div class="cell small-6 medium-6 large-6">
          <div class="charts one-line" id="project-story-charts"></div>
        </div>
      </div>

    </div>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="/public/scripts/common-charts.js"></script>
    <script src="/public/scripts/projectDetail.js"></script>

    <script charset="utf-8">
      var pieTooltip = percentageToolTip('hrs');
      var seriesTooltip = {
          pointFormat: '{series.name}: <b>{point.y}</b>'
      };
      var pieNumPercentageTooltip = percentageToolTip('个');

      var taskTypStat = [];

      var taskTypStatNum = [];
      {{#taskStats}}
        taskTypStat.push({name: '{{taskTyp}}', value: {{consumedTime}} })
        taskTypStatNum.push({name: '{{taskTyp}}', value: {{totalNum}} })
      {{/taskStats}}

      {{#projectStoryStat}}
        var projectStoryStat = [
          {name: '已完成', value: {{completeStoryCount}} },
          {name: '未完成', value: {{#leftStoryCount}}{{/leftStoryCount}} }
        ];
      {{/projectStoryStat}}


      renderPie('task-type-pie', '任务类型耗时报表', taskTypStat, pieTooltip);
      renderPie('task-type-pie-num', '任务类型任务数报表', taskTypStatNum, pieNumPercentageTooltip);
      renderPie('project-story-charts', '需求完成度',
      projectStoryStat, pieNumPercentageTooltip);


      var taskByMember = {};
      var yAxis = [{
            title: {
                text: '耗时'
            }
        }, {
            opposite: true,
            title: {
                text: '个数'
            }
      }];
      var timeUsageByMember = {};

      {{#memberStats}}
        taskByMember['{{name}}'] = []
        taskByMember['{{name}}'] = taskByMember['{{name}}'].concat({
          seriesName: '实际总耗时',
          value: {{tolConsumedTime}},
        },
        {
          seriesName: '预计总耗时',
          value: {{tolEstimatedTime}},
        },
        {
          seriesName: '任务总数',
          value: {{taskTolNum}},
          yAxis: 1
        },
        {
          seriesName: '研发需求数',
          value: {{tolStoryCount}},
          yAxis: 1
        });

        timeUsageByMember['{{name}}'] = []
        timeUsageByMember['{{name}}'].push({
          seriesName: '利用率',
          value: {{#availPercentage}}{{/availPercentage}},
        });
      {{/memberStats}}

      renderColumnBar('people-charts', '项目成员工作情况报表', yAxis, taskByMember, seriesTooltip);

      var timeUsageYAxis = [{
            title: {
                text: '时间利用率'
            }
        }];
      renderColumnBar('people-time-usage-charts', '项目成员工作时间利用率报表', timeUsageYAxis,
        timeUsageByMember, seriesTooltip);


      var projectTimeUsage= [];
      {{#projectTimeUsage}}
        projectTimeUsage.push({name: '已耗时', value: {{usageTime}} })
        projectTimeUsage.push({name: '剩余', value: {{#timeLeft}}{{/timeLeft}} })
      {{/projectTimeUsage}}

      renderPie('project-time-usage-charts', '工程耗时', projectTimeUsage, pieTooltip);
    </script>
  </body>
</html>
